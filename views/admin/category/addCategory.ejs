
<script type="text/javascript">
    /********signUp form validation *********/
    $(document).ready(function() {
        $('#categoryAdd').submit(function(e) {
          
            var valid = $("#categoryAdd").valid();
            if (valid) {} else {
                e.preventDefault();
            }
        });
      $('#categoryAdd').validate({
            rules: {
                'name': 'required',
             },
            messages: {
                name: {
                    required: "Name can't be blank"
                }
           }

        });
});


/********end of form validation *********/
</script>
